<div class="p-md flex flex-col items-center min-h-screen bg-background">
  <header class="w-full bg-accent shadow-md py-3 px-4 mb-3xl flex items-center justify-between">
    <div class="flex items-center">
      <Heroicons.rocket_launch solid class="h-8 w-8 text-main mr-2" />
      <h1 class="text-3xl font-bold text-main">Tailwind Test Page</h1>
    </div>
    
    <div class="flex items-center space-x-1xl">
      <Heroicons.bell_alert solid class="h-6 w-6 text-main" />
      <Heroicons.cog_6_tooth solid class="h-6 w-6 text-main" />
      <div class="h-10 w-10 rounded-full bg-callout flex items-center justify-center">
        <Heroicons.user solid class="h-6 w-6 text-main" />
      </div>
    </div>
  </header>
  
  <div class="bg-callout w-full max-w-4xl rounded-lg shadow-lg p-2xl mb-3xl">
    <div class="flex items-center mb-1xl">
      <Heroicons.information_circle solid class="h-8 w-8 text-accent mr-1xl" />
      <p class="text-md text-deemphasized">
        Testing if Tailwind classes are properly processing new elements
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2xl">
      <div class="bg-background rounded-lg p-1xl shadow-inner">
        <div class="flex items-center mb-1xs">
          <Heroicons.check_badge solid class="h-5 w-5 text-accent mr-1xs" />
          <h3 class="text-1xl font-gt-flexa">Component Features</h3>
        </div>
        
        <ul class="space-y-1xs pl-3">
          <li class="flex items-center">
            <Heroicons.check_circle
              solid
              class="h-4 w-4 text-main mr-1xs flex-shrink-0"
            /> <span class="text-1xs">Custom typography scales</span>
          </li>
          
          <li class="flex items-center">
            <Heroicons.check_circle
              solid
              class="h-4 w-4 text-main mr-1xs flex-shrink-0"
            /> <span class="text-1xs">Custom spacing scales</span>
          </li>
          
          <li class="flex items-center">
            <Heroicons.check_circle
              solid
              class="h-4 w-4 text-main mr-1xs flex-shrink-0"
            /> <span class="text-1xs">Custom color palette</span>
          </li>
          
          <li class="flex items-center">
            <Heroicons.check_circle
              solid
              class="h-4 w-4 text-main mr-1xs flex-shrink-0"
            /> <span class="text-1xs">HeroIcons integration</span>
          </li>
        </ul>
      </div>
      
      <div class="bg-main rounded-lg p-1xl shadow-lg">
        <div class="flex justify-between items-center mb-1xl border-b border-callout pb-1xs">
          <h3 class="text-1xl font-cardinal-fruit text-callout">
            Interactive Elements
          </h3>
           <Heroicons.cursor_arrow_ripple solid class="h-6 w-6 text-accent" />
        </div>
        
        <div class="space-y-1xl">
          <div class="flex items-center">
            <span class="text-1xs text-deemphasized w-24">Toggle:</span>
            <div class="relative inline-flex h-6 w-11 items-center rounded-full bg-suppressed">
              <span class="absolute h-4 w-4 transform rounded-full bg-accent transition ml-1">
              </span>
            </div>
          </div>
          
          <div class="flex items-center">
            <span class="text-1xs text-deemphasized w-24">Slider:</span>
            <div class="h-2 w-full rounded-full bg-suppressed relative">
              <div class="absolute left-0 top-0 h-2 w-1/3 rounded-full bg-accent">
              </div>
            </div>
          </div>
          
          <div class="flex items-center">
            <span class="text-1xs text-deemphasized w-24">Button:</span>
            <button class="bg-accent hover:bg-accent/80 text-main py-1xs px-1xs rounded-md transition-colors flex items-center">
              <Heroicons.arrow_path solid class="h-4 w-4 mr-1xs animate-spin" />
              Loading...
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-1xl w-full max-w-4xl mb-2xl">
    <!-- Test Card 1 -->
    <div class="bg-callout rounded-lg shadow-md p-1xl">
      <h2 class="text-1xl font-cardinal-fruit text-main mb-1xs flex items-center">
        <Heroicons.swatch solid class="h-5 w-5 mr-1xs text-accent" />
        Basic Colors
      </h2>
      
      <div class="space-y-2xs">
        <div class="h-8 w-full bg-main rounded"></div>
        
        <div class="h-8 w-full bg-callout rounded"></div>
        
        <div class="h-8 w-full bg-deemphasized rounded"></div>
        
        <div class="h-8 w-full bg-suppressed rounded"></div>
        
        <div class="h-8 w-full bg-accent rounded"></div>
      </div>
    </div>
    <!-- Test Card 2 -->
    <div class="bg-main rounded-lg shadow-md p-1xl">
      <h2 class="text-1xl font-gt-flexa text-callout mb-1xs flex items-center">
        <Heroicons.document_text solid class="h-5 w-5 mr-1xs text-accent" />
        Typography
      </h2>
      
      <p class="text-2xs text-deemphasized">2xs size text</p>
      
      <p class="text-1xs text-main">1xs size text</p>
      
      <p class="text-md text-suppressed">md size text</p>
      
      <p class="text-1xl text-accent">1xl size text</p>
      
      <p class="text-2xl text-callout">2xl size text</p>
    </div>
    <!-- Test Card 3 -->
    <div class="bg-accent rounded-lg shadow-md p-1xl">
      <h2 class="text-1xl font-noto-sans-jp text-main mb-1xs flex items-center">
        <Heroicons.arrows_pointing_out solid class="h-5 w-5 mr-1xs text-main" />
        Spacing
      </h2>
      
      <div class="space-y-2xs">
        <div class="h-3xs w-full bg-main rounded"></div>
        
        <div class="h-2xs w-full bg-callout rounded"></div>
        
        <div class="h-1xs w-full bg-deemphasized rounded"></div>
        
        <div class="h-md w-full bg-suppressed rounded"></div>
        
        <div class="h-1xl w-full bg-main rounded"></div>
      </div>
    </div>
  </div>
  
  <footer class="w-full bg-background border-t border-callout mt-auto pt-1xl">
    <div class="flex flex-col items-center">
      <p class="text-1xs text-deemphasized mb-1xs flex items-center">
        <Heroicons.clock solid class="h-4 w-4 mr-1xs text-suppressed" />
        Updated at: <%= @timestamp %>
      </p>
      
      <button
        phx-click="refresh"
        class="bg-accent hover:bg-accent/80 text-main py-2xs px-1xs rounded-md transition-opacity flex items-center mb-1xl"
      >
        <Heroicons.arrow_path solid class="h-4 w-4 mr-1xs" /> Refresh
      </button>
    </div>
  </footer>
</div>
